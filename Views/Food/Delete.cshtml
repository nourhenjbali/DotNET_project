@model mvcp.Models.FoodItem

<h2>Confirmation de suppression</h2>

<p>Êtes-vous sûr de vouloir supprimer l'élément alimentaire suivant?</p>

<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Name)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Description)
    </dd>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Price)
    </dd>

</dl>

<form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
    <input type="submit" value="Confirmer la suppression" class="btn btn-danger" />
    <a asp-action="Index">Annuler</a>
</form>
